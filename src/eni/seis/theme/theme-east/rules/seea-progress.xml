<?xml version="1.0" encoding="UTF-8"?>
<rules
  xmlns="http://namespaces.plone.org/diazo"
  xmlns:css="http://namespaces.plone.org/diazo/css"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Custom SEEA Progress -->
  <rules css:if-content="body.template-seea-progress_root">

    <theme href="seea-progress.html" />

    <replace css:theme="[data-diazo='seea-content-section1']" css:content="[data-diazo='seea-content-section1']" />
    <replace css:theme="[data-diazo='seea-content-section2']" css:content="[data-diazo='seea-content-section2']" />
    <replace css:theme="[data-diazo='seea-content-section3']"
             href="seea-progress-table-section" method="document"
             css:content="#content-core" />
    <replace css:theme="[data-diazo='seea-content-section4']" css:content="[data-diazo='seea-content-section4']" />


  </rules>
</rules>
